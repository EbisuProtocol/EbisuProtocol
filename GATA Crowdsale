contract MyCrowdsale is Crowdsale, AllowanceCrowdsale {

    constructor(

        uint256 rate,

        address payable wallet,

        IERC20 token,

        address tokenWallet  // <- new argument

    )

        AllowanceCrowdsale(tokenWallet)  // <- used here

        Crowdsale(rate, wallet, token)

        public

    {

    }

}
